<!-- include header -->
<%-include('include/_header')%>
<!-- /include header -->

<!-- Main -->
<main id="site-main">
	<div class="container">
		<div class="box-nav d-flex-justify-between">
			<div class="filter">
				<a href="/"><i class="fas fa-angle-double-left"></i>All Songs</a>
			</div>
		</div>
		<div class="form-title text-center">
			<h2 class="text-dark">Update Song</h2>
			<span class="text-light">Use the below form to update a song</span>
		</div>

		<!-- add song form -->
		<form method="POST" id="update_song">
			<div class="new_song">
				<div class="form-group">
					<label for="name" class="text-light">Song name</label>
					<input type="hidden" name="id" value="<%=song._id%>" >
					<input type="text" name="name" value="<%=song.name%>" placeholder="Kill Bill">
				</div>
				<div class="form-group">
					<label for="artist" class="text-light">Artist</label>
					<input type="text" name="artist" value="<%=song.artist%>"   placeholder="SZA">
				</div>
				<div class="form-group">
					<label for="album" class="text-light">Album</label>
					<input type="text" name="album" value="<%=song.album%>"  placeholder="SOS">
				</div>
				
				<div class="form-group">
					<label for="year" class="text-light">Year</label>
					<div class="typenumber inline">
						<input type="number" name="year" min="1940" max="2023" value="<%=song.year%>">
					</div>
				</div>
		
				<div class="form-group">
					<button type="submit" class="btn text-dark update">Save</button>
				</div>
		
			</div>
		</form>

	</div>
</main>
<!-- /Main -->

<!-- include footer -->
<%-include('include/_footer')%>
<!-- /include footer -->
