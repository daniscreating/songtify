<form action="/api/songs" method="POST" id="add_song">
	<div class="new_song">
		<div class="form-group">
			<label for="name" class="text-light">Song name</label>
			<input type="hidden" name="id">
			<input type="text" name="name"" placeholder="Kill Bill">
		</div>
		<div class="form-group">
			<label for="artist" class="text-light">Artist</label>
			<input type="text" name="artist"  placeholder="SZA">
		</div>
		<div class="form-group">
			<label for="album" class="text-light">Album</label>
			<input type="text" name="album"  placeholder="SOS">
		</div>
		
		<div class="form-group">
			<label for="year" class="text-light">Year</label>
			<div class="typenumber inline">
				<input type="number" name="year" min="1940" max="2023">
			</div>
		</div>

		<div class="form-group">
			<button type="submit" class="btn text-dark update">Save</button>
		</div>

	</div>
</form>